{% extends 'base.html.twig' %}

{% block title %}Person List{% endblock %}

{% block pageheader %}
    <h1>Person List</h1>
    <p class="count">
        Displaying {{ people|length }} people of {{ people.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('person_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('person_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Alias</th>
                <th>Native</th>
                <th>Occupation</th>
                <th>Sex</th>
                <th>Birth Date</th>
                <th>Birth Status</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {% for person in people %}
                <tr>
                    <td>
                        <a href="{{ path('person_show', { 'id': person.id }) }}">
                            {{ person.firstName }}
                        </a>
                    </td>
                    <td>{{ person.lastName }}</td>
                    <td>{% if person.alias %}{{ person.alias|join(', ') }}{% endif %}</td>
                    <td>{{ person.native }}</td>
                    <td>{{ person.occupation }}</td>
                    <td>{{ person.sex }}</td>
                    <td>{{ person.birthDateDisplay }}</td>
                    <td>{{ person.birthStatus }}</td>
                    <td>{{ person.status }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(people) }}
    </div>

{% endblock %}
