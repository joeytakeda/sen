{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block pageheader %}
    <h1>Transaction Details</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('transaction_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('transaction_edit', { 'id': transaction.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('transaction_delete', { 'id': transaction.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Transaction?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Date</th>
                <td>{% if transaction.date %}{{ transaction.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Page</th>
                <td>{{ transaction.page }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ transaction.notes }}</td>
            </tr>
            <tr>
                <th>First Party Note</th>
                <td>{{ transaction.firstPartyNote }}</td>
            </tr>
            <tr>
                <th>Conjunction</th>
                <td>{{ transaction.conjunction }}</td>
            </tr>
            <tr>
                <th>Second Party Note</th>
                <td>{{ transaction.secondPartyNote }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if transaction.created %}{{ transaction.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if transaction.updated %}{{ transaction.updated|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Firstparty</th>
                <td>
                    <a href="{{ path('firstParty_show', { 'id': transaction.firstParty.id}) }}">
                        {{ transaction.firstParty }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Secondparty</th>
                <td>
                    <a href="{{ path('secondParty_show', { 'id': transaction.secondParty.id}) }}">
                        {{ transaction.secondParty }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    <a href="{{ path('category_show', { 'id': transaction.category.id}) }}">
                        {{ transaction.category }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Ledger</th>
                <td>
                    <a href="{{ path('ledger_show', { 'id': transaction.ledger.id}) }}">
                        {{ transaction.ledger }}
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
