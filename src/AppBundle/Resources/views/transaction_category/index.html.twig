{% extends 'base.html.twig' %}

{% block title %}TransactionCategory List{% endblock %}

{% block pageheader %}
    <h1>TransactionCategory List</h1>
    <p class="count">
        Displaying {{ transactionCategories|length }} transactionCategories of {{ transactionCategories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('transaction_category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('transaction_category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    {% embed 'NinesUtilBundle:term:partial/index.html.twig' with {
        'terms': transactionCategories,
        'path': 'transaction_category_show',
    } %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(transactionCategories) }}
    </div>

{% endblock %}
