{% extends 'base.html.twig' %}

{% block title %}Relationship{% endblock %}

 {% block pageheader %}
    <h1>Relationship Details</h1>
 {% endblock %}

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('relationship_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('relationship_edit', { 'id': relationship.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('relationship_delete', { 'id': relationship.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Relationship?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Start Date</th>
                <td>{{ relationship.startDate }}</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>{{ relationship.endDate }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    <a href="{{ path('relationship_category_show', { 'id': relationship.category.id}) }}">
                        {{ relationship.category }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Person</th>
                <td>
                    <a href="{{ path('person_show', { 'id': relationship.person.id}) }}">
                        {{ relationship.person }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Relation</th>
                <td>
                    <a href="{{ path('person_show', { 'id': relationship.relation.id}) }}">
                        {{ relationship.relation }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if relationship.created %}{{ relationship.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if relationship.updated %}{{ relationship.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
