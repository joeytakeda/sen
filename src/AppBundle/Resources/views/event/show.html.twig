{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

 {% block pageheader %} 
    <h1>Event Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('event_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('event_edit', { 'id': event.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('event_delete', { 'id': event.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Event?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Written Date</th>
                <td>{{ event.writtenDate }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if event.date %}{{ event.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ event.note }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if event.created %}{{ event.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if event.updated %}{{ event.updated|date }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Category</th>
                <td>
                    <a href="{{ path('category_show', { 'id': event.category.id}) }}">
                        {{ event.category }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Location</th>
                <td>
                    <a href="{{ path('location_show', { 'id': event.location.id}) }}">
                        {{ event.location }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Participants</th>         
                <td>
                    {% if event.participants | length > 0 %}
                    <ul>
                        {% for participants in event.participants %}
                        <li>
                            <a href="{{ path("participants_show", {"id":participants.id}) }}">
                                {{ participants }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
    {% if event.witnesses | length > 0 %}    
    <h2>Witnesses</h2>
    <ul>
        {% for witnesses in event.witnesses %}
        <li>
            <a href="{{ path("witnesses_show", {"id":witnesses.id}) }}">
                {{ witnesses }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
