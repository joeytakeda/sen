{% extends 'base.html.twig' %}

{% block title %}WitnessCategory List{% endblock %}

{% block pageheader %}
    <h1>WitnessCategory List</h1>
    <p class="count">
        Displaying {{ witnessCategories|length }} witnessCategories of {{ witnessCategories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('witness_category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('witness_category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
            </tr>
        </thead>
        <tbody>
            {% for witnessCategory in witnessCategories %}
                <tr>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(witnessCategories) }}
    </div>

{% endblock %}
