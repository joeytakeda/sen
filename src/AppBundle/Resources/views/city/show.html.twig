{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

 {% block pageheader %} 
    <h1>City Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('city_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('city_edit', { 'id': city.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('city_delete', { 'id': city.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this City?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if city.created %}{{ city.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if city.updated %}{{ city.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
