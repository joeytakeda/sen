{% extends 'base.html.twig' %}

{% block title %}Race{% endblock %}

{% block pageheader %}
    <h1>Race Details</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('race_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('race_edit', { 'id': race.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('race_delete', { 'id': race.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Race?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if race.created %}{{ race.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if race.updated %}{{ race.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    {% if race.people | length > 0 %}
        <h2>People</h2>
        <ul>
            {% for people in race.people %}
                <li>
                    <a href="{{ path("people_show", {"id":people.id}) }}">
                        {{ people }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
