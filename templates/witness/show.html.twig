{% extends 'base.html.twig' %}

{% block title %}Witness{% endblock %}

{% block pageheader %}
    <h1>Witness Details</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('witness_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('witness_edit', { 'id': witness.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('witness_delete', { 'id': witness.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Witness?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Category</th>
                <td>
                    <a href="{{ path('witness_category_show', { 'id': witness.category.id}) }}">
                        {{ witness.category }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Person</th>
                <td>
                    <a href="{{ path('person_show', { 'id': witness.person.id}) }}">
                        {{ witness.person }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Event</th>
                <td>
                    <a href="{{ path('event_show', { 'id': witness.event.id}) }}">
                        {{ witness.event }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if witness.created %}{{ witness.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if witness.updated %}{{ witness.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
