{% extends 'base.html.twig' %}

{% block title %}RelationshipCategory List{% endblock %}

{% block pageheader %}
    <h1>RelationshipCategory List</h1>
    <p class="count">
        Displaying {{ relationshipCategories|length }} relationshipCategories of {{ relationshipCategories.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('relationship_category_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('relationship_category_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    {% embed '@NinesUtil/term/partial/index.html.twig' with {
        'terms': relationshipCategories,
        'path': 'relationship_category_show',
    } %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(relationshipCategories) }}
    </div>

{% endblock %}
